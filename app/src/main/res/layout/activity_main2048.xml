<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2048"
    android:background="@drawable/background2048">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2048"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/game_board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="508dp"
        android:gravity="center"
        android:text="Score: 0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.209"
        tools:layout_editor_absoluteX="0dp" />

    <GridLayout
        android:id="@+id/game_board"
        android:layout_width="328dp"
        android:layout_height="322dp"
        android:layout_marginTop="164dp"
        android:background="#BBADA0"
        android:columnCount="4"
        android:gravity="center"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            android:layout_row="0"
            android:layout_column="0"
            app:layout_column="0"
            app:layout_row="0" />

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="1"
            app:layout_row="0" />

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="2"
            app:layout_row="0" />

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="3"
            app:layout_row="0" />

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="0"
            app:layout_row="1" />

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="1"
            app:layout_row="1" />

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="2"
            app:layout_row="1" />

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="3"
            app:layout_row="1" />

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="0"
            app:layout_row="2" />

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="1"
            app:layout_row="2" />

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="2"
            app:layout_row="2" />

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="3"
            app:layout_row="2" />

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="0"
            app:layout_row="3" />


        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="1"
            app:layout_row="3" />

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="2"
            app:layout_row="3" />

        <com.example.a2048.GameCellView
            style="@style/GameCellView"
            layout_weight="1"
            app:layout_column="3"
            app:layout_row="3" />


    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
